{
  "name": "sfmok/request-input-bundle",
  "type": "symfony-bundle",
  "description": "RequestInput bundle provides auto-transform request data into DTO input objects",
  "keywords": [
    "request to input",
    "request to dto",
    "bundle",
    "input",
    "dto"
  ],
  "authors": [
    {
      "name": "Mokhtar Tlili",
      "email": "tlili.mokhtar@gmail.com",
      "homepage": "https://devcore.tools"
    }
  ],
  "license": "MIT",
  "require": {
    "php": "^7.3 || ^8.0",
    "symfony/http-kernel": "^4.4 || ^5.4 || ^6.0",
    "symfony/http-foundation": "^4.4 || ^5.4 || ^6.0",
    "symfony/serializer": "^4.4 || ^5.4 || ^6.0",
    "symfony/validator": "^4.4 || ^5.4 || ^6.0",
    "symfony/dependency-injection": "^4.4 || ^5.4 || ^6.0",
    "symfony/property-access": "^4.4 || ^5.4 || ^6.0",
    "symfony/config": "^4.4 || ^5.4 || ^6.0",
    "doctrine/annotations": "^1.13"
  },
  "require-dev": {
    "phpunit/phpunit": "^9",
    "symfony/framework-bundle": "^4.4 || ^5.4 || ^6.0",
    "phpspec/prophecy-phpunit": "^2.0",
    "friendsofphp/php-cs-fixer": "^3.13",
    "phpstan/phpstan": "^1.9",
    "symfony/yaml": "^4.4 || ^5.4 || ^6.0"
  },
  "autoload": {
    "psr-4": {
      "Sfmok\\RequestInput\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Sfmok\\RequestInput\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "phpunit": "vendor/bin/phpunit --coverage-text",
    "fix-cs": "vendor/bin/php-cs-fixer fix src/",
    "phpstan": "vendor/bin/phpstan analyse src tests"
  },
  "prefer-stable": true
}
